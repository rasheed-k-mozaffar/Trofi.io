@inject CartState CartState
@implements IDisposable


<span class="badge">@CartState.CartItemsCount</span>


<style>
    .badge {
        color: white;
        background-color: red;
        padding: .25rem .35rem;
        border-radius: 50%;
        font-size: 12px;
    }
</style>

@code {
    protected override void OnInitialized()
    {
        CartState.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        CartState.OnChange -= StateHasChanged;
    }
}
